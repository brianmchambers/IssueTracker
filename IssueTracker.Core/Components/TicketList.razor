@if (Tickets.Count == 0)
{
    <p class="text-muted">No tickets found for this project.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Assigned To</th>
                <th>Created</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Tickets)
            {
                <tr>
                    <td>@ticket.Title</td>
                    <td>@ticket.Status</td>
                    <td>@(ticket.AssignedTo ?? "Unassigned")</td>
                    <td>@ticket.CreatedAt.ToShortDateString()</td>
                    <td>
                        <button class="btn btn-sm btn-primary"
                                @onclick="() => HandleTicketSelected(ticket.Id)">
                            View
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (SelectedTicketId != null)
    {
        <TicketDetail TicketId="SelectedTicketId.Value" OnTicketUpdated="HandleTicketUpdated" />
    }
}