@if (Projects is null)
{
    <div class="alert alert-info">Loading projects...</div>
}
else if (!Projects.Any())
{
    <div class="alert alert-warning">No projects found.</div>
}
else
{
    <ul class="list-group">
        @foreach (var project in Projects)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="me-auto">
                        <h5 class="mb-1">@project.Name</h5>
                        <p class="mb-1 text-muted">@project.Description</p>

                        <small class="text-muted">
                            Created: @project.CreatedAt.ToString("MMM dd, yyyy")
                        </small>
                    </div>
                    <div>
                        <button class="btn btn-sm btn-outline-primary"
                                @onclick="() => OnProjectSelected.InvokeAsync(project.Id)">
                            View
                        </button>
                    </div>
                </div>
            </li>
        }
    </ul>
}
